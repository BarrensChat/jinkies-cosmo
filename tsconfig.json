{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@classes/*": ["app/common-classes/*"],
      "@services/*": ["app/services/*"],
      "@assets/*": ["assets/*"],
      "@sass/*": ["sass/*"],
      "@constants/*": ["app/constants/*"],
      "@interceptors/*": ["app/interceptors/*"],
      "@modules/*":["app/modules"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
